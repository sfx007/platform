{
  "name": "trust-systems-platform",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:terminal": "npx tsx server/terminal-server.ts",
    "dev:full": "npx tsx server/terminal-server.ts & next dev -p 3060",
    "build": "prisma generate && if [ -z \"$VERCEL\" ] && [ -n \"$DATABASE_URL\" ]; then prisma migrate deploy && npx tsx scripts/sync-content.ts && npx tsx scripts/seed-skills.ts && npx tsx scripts/seed-flashcards.ts; else echo 'Skipping DB migrate/seed (Vercel or no DATABASE_URL)'; fi && next build",
    "start": "next start",
    "postinstall": "prisma generate",
    "lint": "eslint",
    "test": "tsx --test tests/*.test.ts",
    "content:sync": "npx tsx scripts/sync-content.ts",
    "content:validate": "npx tsx scripts/validate-content.ts",
    "visuals:sync": "npx tsx scripts/sync-visuals.ts",
    "visuals:validate": "npx tsx scripts/validate-visuals.ts",
    "db:push": "npx prisma db push",
    "db:studio": "npx prisma studio",
    "seed:skills": "npx tsx scripts/seed-skills.ts"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "@prisma/client": "^5.22.0",
    "@types/ws": "^8.18.1",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/xterm": "^6.0.0",
    "bcryptjs": "^3.0.3",
    "date-fns": "^4.1.0",
    "elkjs": "^0.11.0",
    "framer-motion": "^12.33.0",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.563.0",
    "monaco-vim": "^0.4.4",
    "next": "^15.5.12",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-resizable-panels": "^4.6.2",
    "reactflow": "^11.11.4",
    "recharts": "^3.7.0",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-html": "^16.0.1",
    "ws": "^8.19.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.19.32",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "postcss": "^8.5.6",
    "prisma": "^5.22.0",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "5.9.3"
  },
  "description": "This is a [Next.js](https://nextjs.org) project bootstrapped with [`create-next-app`](https://nextjs.org/docs/app/api-reference/cli/create-next-app).",
  "main": "index.js",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "optionalDependencies": {
    "node-pty": "^1.1.0"
  }
}
